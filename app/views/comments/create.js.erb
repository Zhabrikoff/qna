<% if @comment.errors.any? %>
  $('.new-comment-errors').html('<%= render 'shared/errors', resource: @comment %>');
<% else %>
  $('.new-comment-errors').empty();
<% end %>

<% if @comment.persisted? %>
  $('#<%= @comment.commentable_type.downcase %>-id-<%= @comment.commentable_id %>  .comments ul').append('<%= j render @comment %>');
  $('.new-comment #comment_body').val('');
<% end %>
